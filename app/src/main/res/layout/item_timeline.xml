<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:background="#f8f8f8">

    <TextView
        android:id="@+id/list_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="Username"  android:textStyle="bold"
        android:textSize="15dp" android:textColor="#444" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp" android:layout_marginTop="1dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_place"
            android:id="@+id/imageView" />

        <TextView
            android:id="@+id/list_address"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginLeft="1dp" android:layout_marginTop="-1dp"
            android:textSize="12dp"
            android:text="University Campus, Peshawar" />
    </LinearLayout>

    <TextView
        android:id="@+id/list_post"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginTop="5dp" android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" android:textSize="15dp"
        android:textColor="#444"
        android:text="Yesterday, I was walking around Hostle # 9 and I found it very deadly. \n Please clean it.." />

    <ImageView
        android:id="@+id/list_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp" android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp" />
    <LinearLayout
        android:layout_width="match_parent" android:layout_marginTop="7dp"
        android:layout_height="wrap_content" android:background="#f3f3f3" android:padding="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/list_text_upvote"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp" android:gravity="center_vertical"
            android:textSize="12dp" android:text="345" />

        <ImageView
            android:id="@+id/list_upvote"
            android:layout_width="15dp"
            android:layout_height="15dp" android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/up_arrow" />

        <TextView
            android:id="@+id/list_text_downvote"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp" android:gravity="center_vertical"
            android:textSize="12dp"
            android:text="300" />
        <ImageView
            android:id="@+id/list_downvote"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="2dp" android:layout_marginLeft="5dp"
            android:src="@drawable/down_arrow_red" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp" android:layout_marginTop="1dp"
        android:background="@color/hr"
        />
</LinearLayout>